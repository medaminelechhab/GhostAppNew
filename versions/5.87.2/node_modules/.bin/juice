#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../@tryghost/kg-default-cards/node_modules/juice/bin/juice" "$@"
  ret=$?
else 
  node  "$basedir/../@tryghost/kg-default-cards/node_modules/juice/bin/juice" "$@"
  ret=$?
fi
exit $ret
